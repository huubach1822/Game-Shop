<style>
    .banner-btn {
        font-size: 14px;
        color: #111111;
        text-transform: uppercase;
        font-weight: 600;
        position: relative;
        padding: 0 0 3px;
        display: inline-block;
    }

        .banner-btn::after {
            position: absolute;
            left: 0;
            bottom: 0;
            height: 2px;
            width: 100%;
            background: #ca1515;
            content: "";
        }

    .pop {
        position: fixed;
        top: 0%;
        left: 0%;
        height: 100%;
        width: 100%;
        padding: 10px;
        z-index: 4;
        backdrop-filter: blur(2px);
    }

    .pop-content {
        position: fixed;
        top: 10%;
        left: 30%;
        width: 600px;
        background: white;
        z-index: 5;
        border-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        height: 600px;
    }

    .heading-banner {
        font-family: "Cookie", cursive;
        color: #111111;
        font-size: 35px;
        text-align: center;
    }

    .goback-btn {
        background-color: #555555;
        color: black;
        border: none;
        color: white;
        padding: 10px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 10px 10px 10px 10px;
        cursor: pointer;
        float: right;
    }

    .content-banner {
        padding: 0 10px 0 10px;
        height: 185px;
        overflow: auto;
        text-align: justify;
    }
</style>

<script>

    function popup(bannerID) {
        var r = '';
        $.ajax({
            type: 'GET',
            url: "/api/apigame/?bannerID=" + bannerID,
            dataType: 'json',
            success: function (data) {

                r += `<div class="pop">
                        <div class="pop-content">
                            <img style="border-radius: 5px 5px 0 0; width:600px; height:300px;" src="${data.img_url}">
                            <div class="heading-banner">${data.title}</div>
                            <div class="content-banner">${data.description}</div>
                            <btn type="button" class="goback-btn" onclick="goback()">Go Back</btn>
                        </div>
                      </div>`

                $('#popup-container').html(r);

            },
            error: function () {
                alert("BUGGGGGGGGGGGGGGGGGGG!");
            }
        });
    }

    function goback() {
        $('#popup-container').empty();
    }

</script>

